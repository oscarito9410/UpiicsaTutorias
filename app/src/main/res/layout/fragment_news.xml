<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="viewModel" type="com.booleansystems.tutorias.ui.home.news.NewsViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/normal_separation"
                  android:layout_marginStart="@dimen/normal_separation"
                  style="@style/MultiCurrencyTextParagraph1Black"
                  android:text="@string/title_news_fragment"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdgeLength="30dp"
                android:focusable="true"
                android:requiresFadingEdge="vertical">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</layout>
