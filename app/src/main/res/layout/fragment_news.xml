<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="viewModel" type="com.booleansystems.tutorias.view.home.news.NewsViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/normal_separation"
                  android:layout_marginStart="@dimen/normal_separation"
                  style="@style/MultiCurrencyTextParagraph1Black"
                  android:text="@string/title_news_fragment"/>


        <WebView
                android:id="@+id/webViewNews"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"/>


    </LinearLayout>
</layout>
