<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginStart="@dimen/normal_separation"
              android:layout_marginEnd="@dimen/normal_separation"
              android:layout_marginTop="@dimen/normal_separation"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="@dimen/normal_separation"
                                       app:contentPadding="@dimen/normal_separation"
                                       app:cardElevation="@dimen/small_separation">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/tvNewTitle"
                      style="@style/MultiCurrencyTextParagraph1Black"
                      tools:text="Noticia de coordinación"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/tvNewDescription"
                      style="@style/MultiCurrencyTextParagraph14Black"
                      tools:text="Noticia de coordinación"/>
            <ImageView
                    android:id="@+id/imgNew"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>