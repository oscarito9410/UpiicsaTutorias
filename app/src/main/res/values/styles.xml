<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>


    <style name="MultiCurrencyTextParagraph14Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDialogTranslucent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="MultiCurrencyTextParagraph1Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MultiCurrencyTextParagraph2Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MultiCurrencyButtonSignInStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="RadioButtonCustomStyle">
        <item name="android:minHeight">33dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">@dimen/big_separation</item>
        <item name="android:layout_marginBottom">@dimen/big_separation</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CardViewDefaultStyle">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">20dp</item>
        <item name="contentPadding">@dimen/small_separation_3</item>
    </style>
</resources>
